<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.contactlistapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ContactListApp"
        tools:targetApi="31">
        <activity
            android:name=".ContactDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_contact_detail"
            android:theme="@style/Theme.ContactListApp" />
        <activity
            android:name=".ContactDetailActivity.kt"
            android:exported="false"
            android:label="@string/title_activity_contact_detail_activity.kt"
            android:theme="@style/Theme.ContactListApp" />
        <activity
            android:name=".ContactListActivity"
            android:exported="false"
            android:label="@string/title_activity_contact_list"
            android:theme="@style/Theme.ContactListApp" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ContactListApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>